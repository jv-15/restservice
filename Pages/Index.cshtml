@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model CreditApplicationRESTservice.Pages.IndexModel

<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <h3> Interest rate calculator </h3>
    <form method="get">
        <div asp-validation-summary="All"></div>
        <div>
            <label> Credit Amount</label> <br />
            <input type="number" min="0.00" step="0.01" asp-for="creditAmount" required/> <br />
        </div>
        <div>
            <label> Term </label> <br />
            <input type="number" min="1" step="1" asp-for="term" required/> <br />
        </div>
        <div>
            <label> Pre-existing Credit Amount</label> <br />
            <input type="number" min="0.00" step="0.01" asp-for="preExCreditAmount" required/> <br />
        </div> <br />
        <input type="submit" value="Calculate" /><br />
    </form>
    <p> Descision: </p> <br />
    <label>@Model.descision</label>
    <p> Interest rate percentage: </p> <br />
    <label>@Model.interestRatePercentage</label>
</body>
</html>